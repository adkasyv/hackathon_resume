@import 'layout.styl'


/* 
! ====================
! header
! ====================
*/
.header
  display none
  @media screen-md
    display block
  a
    display grid
    justify-items start
    margin 3em
    img
      width 50px
      height 50px



/* 
! ====================
! nav
! ====================
*/
.nav
  display grid
  grid-template-columns 10% 10% 10% 10%
  grid-template-columns repeat(auto-fit, minmax(150px, 1fr))
  justify-content end
  justify-items end

  font-size 40px
  margin 0 1em
  @media screen-md
    display none


/* 
! ====================
! work
! ====================
*/
.work
  &__wrapper
    display grid
    gap 2em
    margin 2em
    font-size 30px


/* 
! ====================
! footer
! ====================
*/
.footer
  a
    display grid
    justify-items end
    margin 3em
    img
      width 50px
      height 50px